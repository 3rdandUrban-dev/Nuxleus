<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="HeadBorder" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="#FF484848" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Height" Value="40"/>
    </Style>
    <LinearGradientBrush x:Key="HeadBackgroundBrush" EndPoint="0.5,0.045" StartPoint="0.5,0">
        <GradientStop Color="#6FCCCCCC"/>
        <GradientStop Color="#00CCCCCC" Offset="1"/>
    </LinearGradientBrush>
    <Style x:Key="ApplicationName" TargetType="{x:Type Label}">
        <Setter Property="Foreground" Value="#FFFFFFFF"></Setter>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,2,0,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
</ResourceDictionary>