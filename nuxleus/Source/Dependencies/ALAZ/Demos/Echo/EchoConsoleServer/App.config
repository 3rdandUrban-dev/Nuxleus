<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  
  <system.net>
    <settings>
      <socket
        alwaysUseCompletionPortsForAccept="true"
        alwaysUseCompletionPortsForConnect="true"
       />
    </settings>
  </system.net>

  <system.diagnostics>
    <sources>
      <source name="System.Net.Sockets">
        <listeners>
          <add name="Sockets"/>
        </listeners>
      </source>
    </sources>
    
    <switches>
      <!-- The value tag below is a TraceLevel enumeration. Change it to start logging. -->
      <add name="System.Net.Sockets" value="Off" />
    </switches>
    
    <sharedListeners>
      <add name="Sockets" type="System.Diagnostics.TextWriterTraceListener" 
        initializeData="Sockets.log"/>
    </sharedListeners>
    
    <trace autoflush="true" />
    
  </system.diagnostics>
  
</configuration>
