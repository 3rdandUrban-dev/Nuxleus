<?xml version="1.0"?>
<model:collection id="signupform" type="xhtml" xmlns="http://www.w3.org/1999/xhtml"
    xmlns:collection="http://atomictalk.org/page/model/collection" xmlns:model="http://atomictalk.org/page/model">
    <collection:item id="center" style="transparency-90">
        <span>@@openid.error.message@@</span>
        <form action="/signup" method="post">
            <label class="openid-form-label">Login:</label>
            <input type="text" value="" name="login" class="openid-single-input" />
            <br />

            <label class="openid-form-label">Password:</label>
            <input type="password" value="" name="password" class="openid-single-input" />
            <br />

            <label class="openid-form-label">Confirm password:</label>
            <input type="password" value="" name="confirm_password" class="openid-single-input" />
            <br />

            <input type="submit" class="Button submit" />
        </form>
    </collection:item>
</model:collection>
