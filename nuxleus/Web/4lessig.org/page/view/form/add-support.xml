<?xml version="1.0" encoding="UTF-8"?>
<view:module class="base" id="instance" xmlns="http://www.w3.org/1999/xhtml" xmlns:geo="http://nuxleus.com/geo" xmlns:doc="http://atomictalk.org/feed/doc" xmlns:view="http://atomictalk.org/page/view">
  <div class="form" id="pledgeSupport">
    <h1>Pledge your support 4Lessig 4Congress!</h1>
    <form method="post" action="/service/4lessig/add-support">
      <table id="pledgeSupportTable">
        <tr>
          <td>Name:</td>
          <td>
            <input type="text" name="name" id="name" />
          </td>
          <td>Location:</td>
          <td>
            <select name="location" id="location">
              <option>Please select the closest match...</option>
              <option value="ca12thdistrict">California 12th District</option>
              <option value="ca">California</option>
              <option value="usa">United States</option>
              <option value="international">International</option>
            </select>
          </td>
          <td>
            <input type="submit" value="Make My Pledge!" />
          </td>
        </tr>
      </table>
    </form>
  </div>
</view:module>
