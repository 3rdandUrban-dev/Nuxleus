class Mono(CPackageRecipe):
    name = 'mono'
    version = '1.2.6'
    buildRequires = [ 
            'zlib:devel', 
            'glib:devel', 
            'bison:runtime',
            'pkgconfig:devel' 
    ]

    def setup(r):
        r.addArchive('http://mono.ximian.com/monobuild/preview/sources/mono/%(name)s-%(version)s.tar.bz2')
	#r.addArchive('http://go-mono.com/sources/%(name)s/%(name)s-%(version)s.tar.bz2')
	
	conf = '--with-preview=yes'

	if Use.minimal:
        	conf += ' --enable-minimal=profiler'
        if Use.xen:
		conf += ' --with-xen_opt=yes'
	if Use.moonlight:
		conf += ' --with-moonlight=yes'

	r.Configure(conf)

	# do not add spurious builddir RPATH entry
        #r.Replace(('^runpath_var=.*', 'runpath_var=""'),
        #          ('^hardcode_libdir_flag_spec=.*',
        #           'hardcode_libdir_flag_spec=""'), 'libtool')
	#r.Run('cd %(builddir)s/tools/locale-builder; pwd; make minimal MINIMAL_LOCALES=en_US;')
	#r.Run('cd %(builddir)s')
        r.Make('CFLAGS=-Os')

        r.MakeInstall()
	#r.Run('strip %(bindir)s/mono')
        r.Move('%(datadir)s/{jay,libgc-mono}', '%(thisdocdir)s/')

        # RPM scripts are not necessary
        r.Remove('%(bindir)s/mono-find-{provides,requires}')

        # libtool wrappers currently get installed instead of the real things
        r.Install('mono/dis/.libs/monodis', '%(bindir)s/')
        r.Install('mono/monograph/.libs/monograph', '%(bindir)s/')

        # The mono libraries that provide CIL: dependencies have an
        # implicit requirement on the mono interpreter
        r.Provides('file', '%(bindir)s/mono')
        r.Requires('%(bindir)s/mono', r'.*\.(dll|exe)')

	
	#r.PackageSpec('mono-minimal','%(bindir)s/mono',
	#			     '%(libdir)s/mono/2.0/mscorlib.dll',
	#			     '%(libdir)s/mono/2.0/mscorlib.mdb',
	#			     '%(libdir)s/mono/2.0/System.dll',
	#			     '%(libdir)s/mono/2.0/System.Xml.dll',
	#			     '%(libdir)s/mono/1.0/mscorlib.dll',
	#			     '%(libdir)s/mono/1.0/mscorlib.mdb',
	#			     '%(libdir)s/mono/1.0/System.dll',
	#			     '%(libdir)s/mono/1.0/System.Xml.dll',
	#			     '%(libdir)s/mono/gac/System/.*',
	#			     '%(libdir)s/mono/gac/System.Xml/.*',
	#			     '%(sysconfdir)s/mono/.*')

        r.ComponentSpec('devel', '%(bindir)s/monodis',
                                 '%(mandir)s/man1/monodis.1.*',
                                 '%(bindir)s/ilasm.*',
                                 '%(mandir)s/man1/ilasm.1.*',
                                 '%(bindir)s/genxs.*',
                                 '%(mandir)s/man1/genxs.1.*',
                                 '%(bindir)s/al.*',
                                 '%(bindir)s/makecert',
                                 '%(bindir)s/MakeCert.exe',
                                 '%(mandir)s/man1/makecert.1.*',
                                 '%(bindir)s/monop.*',
                                 '%(mandir)s/man1/monop.1.*',
                                 '%(bindir)s/cert2spc.*',
                                 '%(mandir)s/man1/cert2spc.1.*',
                                 '%(bindir)s/signcode.*',
                                 '%(mandir)s/man1/signcode.1.*',
                                 '%(bindir)s/secutil.*',
                                 '%(mandir)s/man1/secutil.1.*',
                                 '%(bindir)s/pedump',
                                 '%(bindir)s/monoresgen.*',
                                 '%(bindir)s/resgen',
                                 '%(libdir)s/libmono-profiler-cov.so.*')

