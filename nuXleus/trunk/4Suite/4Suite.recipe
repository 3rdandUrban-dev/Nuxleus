loadRecipe('python.recipe')
class FourSuite(PackageRecipe):

    buildRequires = [ 
        'glib:devel', 
        'python:devel', 
        'PyXML:python',
        'python-setuptools:python',
        'glibc:devel' 
        ]
        
    name = '4Suite'
    version = '1.0'

    def setup(r):
        r.addArchive('ftp://ftp.4suite.org/pub/4Suite/4Suite-XML-1.0.tar.gz')
        r.Run('python setup.py install --root=%(destdir)s')
