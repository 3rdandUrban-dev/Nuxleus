<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <!--<appSettings>
    <add key="CaptureEnabled" value="True" />
  </appSettings>-->
  <configSections>
    <section name="unity"
              type="Microsoft.Practices.Unity.Configuration.UnityConfigurationSection,
                 Microsoft.Practices.Unity.Configuration, Version=1.2.0.0,
                 Culture=neutral, PublicKeyToken=31bf3856ad364e35" />
  </configSections>
  <unity>
    <typeAliases>
      <typeAlias alias="IProfileRegistry" type="Lextm.SharpSnmpLib.Browser.IProfileRegistry, Browser" />
      <typeAlias alias="ProfileRegistry" type="Lextm.SharpSnmpLib.Browser.ProfileRegistry, Browser" />
      <typeAlias alias="IObjectRegistry" type="Lextm.SharpSnmpLib.Mib.IObjectRegistry, SharpSnmpLib" />
      <typeAlias alias="ObjectRegistry" type="Lextm.SharpSnmpLib.Mib.ObjectRegistry, SharpSnmpLib" />
      <typeAlias alias="IOutputPanel" type="Lextm.SharpSnmpLib.Browser.IOutputPanel, Browser" />
      <typeAlias alias="OutputPanel" type="Lextm.SharpSnmpLib.Browser.OutputPanel, Browser" />
      <typeAlias alias="singleton"
           type="Microsoft.Practices.Unity.ContainerControlledLifetimeManager,
           Microsoft.Practices.Unity" />
    </typeAliases>
    <containers>
      
      <container>
        <types>
          <type type="IProfileRegistry" mapTo="ProfileRegistry" name="">
            <lifetime type="singleton" />
          </type>
          <type type="IObjectRegistry" mapTo="ObjectRegistry" name="">
            <lifetime type="singleton" />
            <typeConfig>
              <constructor>
                <param name="path" parameterType="System.String">
                  <value value="mibs"/>
                </param>
              </constructor>
            </typeConfig>
          </type>
          <type type="IOutputPanel" mapTo="OutputPanel" name="">
            <lifetime type="singleton" />
          </type>
        </types>
      </container>
    </containers>
  </unity>

  <system.diagnostics>
    <sources>
      <source name="Browser"
			  switchName="sourceSwitch"
			  switchType="System.Diagnostics.SourceSwitch">
        <listeners>
          <remove name="Default"/>
          <add name="outputPanelListener"/>
        </listeners>
      </source>
    </sources>
    <switches>
      <add name="sourceSwitch" value="Information"/>
      <!-- Verbose switch -->
    </switches>
    <sharedListeners>
      <add name="outputPanelListener"
			  type="Lextm.SharpSnmpLib.Browser.OutputPanelTraceListener, Browser">
        <!-- save to file -->
        <filter type="System.Diagnostics.SourceFilter"
				  initializeData="Browser"/>
        <!-- for Library source only -->
      </add>
    </sharedListeners>
  </system.diagnostics>
</configuration>