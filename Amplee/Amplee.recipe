class Amplee(PackageRecipe):
    name = 'Amplee'
    version = '0.3.6'

    buildRequires = [ 'python-setuptools:python', 'bridge:python' ]

    def setup(r):
        r.addArchive('http://www.defuze.org/oss/amplee/amplee-%(version)s.tar.gz')
        r.Run('python setup.py install --root=%(destdir)s --prefix=%(prefix)s')
        r.ComponentRequires({'python': set(('runtime',))})

