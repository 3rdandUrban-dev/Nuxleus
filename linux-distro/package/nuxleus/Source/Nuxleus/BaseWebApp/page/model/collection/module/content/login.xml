<?xml version="1.0"?>
<model:collection id="search-box-container" type="xhtml" xmlns="http://www.w3.org/1999/xhtml"
    xmlns:collection="http://atomictalk.org/page/model/collection" xmlns:model="http://atomictalk.org/page/model">
    <collection:item id="login" style="center">
        <h2>@@openid.error.message@@</h2>
        <form action="/gatekeeper/login" method="get" target="_top" maxlength="255">
            <input type="hidden" name="return_location" value="http://dev.amp.fm/?" />
            <label for="login" class="input-label-left">Enter your OpenID: </label>
            <input type="text" value="" class="openid-input" id="login" name="uname" />
            <button class="Button submit">
                <span class="ButtonLabel">log me in</span>
            </button>
        </form>
        <br />
        <span>
            <a href="http://openid.amp.fm/signup" title="Signup for an OpenID account at amp.fm">Create an OpenID account</a>
        </span>
    </collection:item>
</model:collection>
