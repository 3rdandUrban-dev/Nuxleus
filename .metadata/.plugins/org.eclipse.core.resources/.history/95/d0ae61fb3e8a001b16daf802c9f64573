class bridge(PackageRecipe):
    name = 'bridge'
    version = '0.1.5'

    buildRequires = [ 'python-setuptools:python']

    def setup(r):
        r.addArchive('http://defuze.org/oss/%(name)s/%(name)s-%(version)s.tar.gz')
        r.PythonSetup()

