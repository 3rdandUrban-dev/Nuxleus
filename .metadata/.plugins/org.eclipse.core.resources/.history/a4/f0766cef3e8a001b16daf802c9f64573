class CherryPy(PackageRecipe):
    name = 'CherryPy'
    version = '3.0.0beta2'

    # For some reason we cannot deploy the package when elementtree is not
    # explicitely stated here. But CherryPy does not require ElementTree
    # in any way.
    buildRequires = [ 
            'python-setuptools:python', 
            'elementtree:python', 
            'mod_python:python' 
    ]

    def setup(r):
        r.addArchive('http://download.cherrypy.org/cherrypy/3.0beta2/CherryPy-3.0.0beta2.tar.gz')
        r.PythonSetup()
