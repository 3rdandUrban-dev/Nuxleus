class Amara(PackageRecipe):
    name = 'Amara'
    version = '2006_12_01'

    buildRequires = [ 'python-setuptools:python', '4Suite:python' ]

    def setup(r):
	r.macros.cvsversion = r.version.replace('_', '-')
        r.addArchive('ftp://ftp.4suite.org/pub/%(name)s/cvs-snapshots/%(name)s-%(cvsversion)s.tar.bz2')
        r.PythonSetup()

